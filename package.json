{
  "name": "kloopik-gaming-portal",
  "version": "1.0.0",
  "description": "Mobile gaming portal with 700+ HTML5 games - www.kloopik.com",
  "main": "index.html",
  "scripts": {
    "dev": "live-server . --port=8080 --open=/",
    "build": "npm run build:all",
    "build:all": "npm run build:split-data && npm run build:pages && npm run build:categories && npm run build:sitemap",
    "build:split-data": "node scripts/split-games-data.js",
    "build:pages": "node scripts/generate-game-pages.js",
    "build:categories": "node scripts/generate-category-pages.js",
    "build:sitemap": "node scripts/generate-sitemap.js",
    "lint": "eslint js/**/*.js scripts/**/*.js",
    "lint:fix": "eslint js/**/*.js scripts/**/*.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "predeploy": "npm run build",
    "deploy": "git add -A && git commit -m 'Build and deploy' && git push origin main",
    "clean": "node scripts/clean-build.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/h-e-a-d/mobileportal.git"
  },
  "keywords": [
    "games",
    "html5-games",
    "mobile-games",
    "gaming-portal",
    "progressive-web-app",
    "pwa"
  ],
  "author": "Kloopik",
  "license": "MIT",
  "homepage": "https://www.kloopik.com",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "defaults",
    "last 2 versions",
    "> 1%",
    "not dead"
  ]
}
